<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:onClick="naiten"
        android:scaleType="fitCenter"
        android:src="@drawable/naiten"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="188dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:onClick="gaiten"
        android:scaleType="fitCenter"
        android:src="@drawable/gaiten"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="324dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:onClick="kukkyoku"
        android:scaleType="fitCenter"
        android:src="@drawable/kukkyoku"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="35dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:onClick="sinten"
        android:scaleType="fitCenter"
        android:src="@drawable/shinten"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="608dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:onClick="time"
        android:scaleType="fitCenter"
        android:src="@drawable/tasseiritsu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/daire_icon"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="736dp"
        android:scaleType="fitCenter"
        android:src="@drawable/daire_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
